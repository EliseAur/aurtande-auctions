{
  "name": "aurtande-auctions",
  "version": "0.0.3",
  "description": "Semester Project 2 - Create an Auction website using an API powered by Noroff",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "watch": "sass src/scss:dist/css --watch & live-server",
    "start": "live-server",
    "dev": "npm-run-all --parallel watch start",
    "format": "prettier -w src/**/*js",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EliseAur/aurtande-auctions.git"
  },
  "keywords": [],
  "author": "Elise Aurtande <elise.aurtande@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EliseAur/aurtande-auctions/issues"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "live-server": "^1.2.2",
    "prettier": "^3.2.5",
    "sass": "^1.71.1"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier --write",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  }
}
